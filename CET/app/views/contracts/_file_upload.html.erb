<% (1..3).each do |item| %>
<tr class=<%= item%2 == 0 ? "alt" : ""%>>
	<td>
		<%= text_field_tag "contract[file][#{item}][image_name]", "", :size => 10 %>
	</td>
	<td>
		<%= select_box("contract[file][#{item}][upload_type]", @upload_type, :style => "width: 270px;") %>
	</td>
	<td>
		<%= file_field_tag "contract[file][#{item}][upload_file]" %>
	</td>
</tr>
<% end %>
