<%= form_for @contract do |f| %>
  <%= f.error_messages %>
  
  <%= field_set_tag "Contract Information" do %>
    <p>
      <%= label_tag 'hmis_url', "HMIS URL" %>
      <%= text_field_tag "HMIS[url]", "http://174.143.165.9/hmisweb4/login.aspx?dbCompanyName=hmis", :disabled => true, :size => 50 %>
