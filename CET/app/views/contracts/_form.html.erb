  </table>
  
  
  <br />
  <br />
  
  <table class="customers">
    <tbody>
      <tr>
        <th>Image names</th>
        <th>Document type</th>
        <th>Upload file</th>
      </tr>
      <%= render :partial => "file_upload", :layout => false%>
