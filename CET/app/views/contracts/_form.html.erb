          <td><%= text_field_tag "interest[payment_start_date]" %></td>
          <td><b>Interest Method</b></td>
          <td><%= select_box("interest[method]", [], :style => "width: 200px;" )%></td>
      </tr>
      <tr>
          <td><b>Interest Rate</b></td>
          <td><%= text_field_tag "interest[rate]" %></td>
          <td><b>Days Interest Free</b></td>
